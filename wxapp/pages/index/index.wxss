page{
    margin: 0px;
    padding: 0px;
}
a {
    text-decoration: none;
}
li {
    list-style: none;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
}


/*导航按钮*/
.navbar-menu {
    width: 100%;
    height: 80px;
    background: #ffffff;
    margin-bottom: 15px;
}

.navbar-menu ul {
    width: 100%;
    height: 80px;
}

.navbar-menu li {
    width: 25%;
    text-align: center;
    height: 60px;
    padding: 10px 0px;
    list-style: none;
    display: inline-block;
    vertical-align: middle;
}

.navbar-menu li image {
    width: 40px;
    height:40px;
    disply: block;
}

.navbar-menu li p {
    display: block;
    width:100%;
    height: 20px;
    font-size: 14px;
    color: #555555;
}





