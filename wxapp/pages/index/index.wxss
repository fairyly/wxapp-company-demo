/**index.wxss**/
page{
    margin: 0px;
    padding: 0px;
}
a {
    text-decoration: none;
}
li {
    list-style: none;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/*侧边栏*/
.page-bottom {
    width: 50%;
    height: 100%;
    position: fixed;
    z-index: 0;
    top: 40px;
    left: 0px;
    bottom: 0px;
}
.page-bottom .page-content{
    width: 100%;
    height: 100%;
}
.page-bottom .page-content ul{
    width: 100%;
    height: 100%;
}
.page-bottom .page-content ul li{
    width: 100%;
    height: 40px;
    border-bottom: 1px solid #eee;
    line-height: 40px;
    text-align: center;
    display: block;
    font-size: 16px;
    color: #666666;
}

/*主页*/
.page-top {
    width: 100%;
    position: absolute;
    top:0px;
    left:0px;
    right:0px;
    z-index: 1; 
    background: #ebebeb;
}
/*导航*/
.index-nav {
    width: 100%;
    height: 40px;
    line-height: 40px;
    background: #ffffff;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 111;
}
.index-nav image {
    margin: 0px;
}
.index-nav .nav-menu-icon {
    display: inline-block;
    vertical-align: middle;
    width: 20px;
    height: 20px;
    margin-left: 20px;
}

.index-nav .index-company-logo {
    display: inline-block;
    vertical-align: middle;
    width: 30px;
    height: 30px;
    margin-left: 32%;
}

.index-nav span {
    font-size: 16px;
    color:#333;
    margin-left: 5px;
}

.c-state1{
    background: rgba(0,0,0,.35);
    transform: rotate(0deg) translate(50%,0%); 
    -webkit-transform: rotate(0deg) translate(50%,0%); 
}
/*轮播图*/
.swiper {
    width: 100%;
    height: 150px;
    background: #ffffff;
    margin-top: 40px;
}

.swiper swiper image {
    width: 100%;
}
/*导航按钮*/
.navbar-menu {
    width: 100%;
    height: 80px;
    background: #ffffff;
    margin-bottom: 15px;
}

.navbar-menu ul {
    width: 100%;
    height: 80px;
}

.navbar-menu li {
    width: 25%;
    text-align: center;
    height: 60px;
    padding: 10px 0px;
    list-style: none;
    display: inline-block;
    vertical-align: middle;
}

.navbar-menu li image {
    width: 40px;
    height:40px;
    disply: block;
}

.navbar-menu li p {
    display: block;
    width:100%;
    height: 20px;
    font-size: 14px;
    color: #555555;
}
/*产品中心*/
.index-container {
    width: 100%;
    background: #ffffff;
    margin-bottom: 15px;
}
.index-container .index-common-title {
    width: 100%;
    height: 40px;
    line-height: 40px;
    padding: 0px 10px;
    border-bottom: 1px solid #ccc;
    box-sizing: border-box;
}
.index-container .index-common-title text {
    display:inline-block;
    height: 40px;
    line-height: 40px;
    border-bottom:2px solid #333333;
}

.contain-content {
    width: 100%;
    padding: 10px 10px 0px 10px;
    box-sizing:border-box;
}
.contain-content .product-ul li {
    display: inline-block;
    vertical-align: top;
    width: 48%;
    text-align: center;
    margin-bottom: 10px;
    border-radius: 2px;
    padding: 20px 0 10px 0px;
}
.contain-content .product-ul li:nth-child(2n) {
    margin-left:4%;
}
.contain-content .product-ul li.li-menu-news {
    background: #11cd6e;
}
.contain-content .product-ul li.li-menu-product {
    background: #FF8000;
}
.contain-content .product-ul li.li-menu-join {
    background: #E6CF0B;
}
.contain-content .product-ul li.li-menu-contact {
    background: #C122DD;
}
.contain-content .product-ul li image {
    width: 60px;
    height: 60px;
}
.contain-content .product-ul li p {
    display: block;
    font-size:14px;
    color: #f2f2f2;
}

/*新闻中心*/
.news-content .index-ul li{
    list-style: none;
    display: block;
    height: 40px;
    line-height: 50px;
    font-size: 14px;
    color: #666666;
    border-bottom: 1px solid #eeeeee; 
}
.news-content .news-ul li:hover {
    color: #333333;
    text-shadow: -1px 0px 10px 0px #ccc;
}

/*联系我们*/
.contact-us .contact-us-ul li {
    width: 100%;
    list-style: none;
    display: block;
    height: 40px;
    line-height: 40px;
    font-size: 14px;
    color: #666666;
    border-bottom: 1px solid #eeeeee; 
    clear:both;

}
.contact-us .contact-us-ul li text.li-left{
   float: left;
   font-size: 13px;
}
.contact-us .contact-us-ul li text.li-right{
   float: right;
   font-size: 13px;
}