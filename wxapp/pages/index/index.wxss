/**index.wxss**/
page{
    margin: 0px;
    padding: 0px;
}
a {
    text-decoration: none;
}
li {
    list-style: none;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
}


/*导航按钮*/
.navbar-menu {
    width: 100%;
    height: 80px;
    background: #ffffff;
    margin-bottom: 15px;
}

.navbar-menu ul {
    width: 100%;
    height: 80px;
}

.navbar-menu li {
    width: 25%;
    text-align: center;
    height: 60px;
    padding: 10px 0px;
    list-style: none;
    display: inline-block;
    vertical-align: middle;
}

.navbar-menu li image {
    width: 40px;
    height:40px;
    disply: block;
}

.navbar-menu li p {
    display: block;
    width:100%;
    height: 20px;
    font-size: 14px;
    color: #555555;
}
/*产品中心*/

.contain-content .product-ul li {
    display: inline-block;
    vertical-align: top;
    width: 48%;
    text-align: center;
    margin-bottom: 10px;
    border-radius: 2px;
    padding: 20px 0 10px 0px;
}
.contain-content .product-ul li:nth-child(2n) {
    margin-left:4%;
}
.contain-content .product-ul li.li-menu-news {
    background: #11cd6e;
}
.contain-content .product-ul li.li-menu-product {
    background: #FF8000;
}
.contain-content .product-ul li.li-menu-join {
    background: #E6CF0B;
}
.contain-content .product-ul li.li-menu-contact {
    background: #C122DD;
}
.contain-content .product-ul li image {
    width: 60px;
    height: 60px;
}
.contain-content .product-ul li p {
    display: block;
    font-size:14px;
    color: #f2f2f2;
}





